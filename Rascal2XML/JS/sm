var doors = (function() { 
   {var closed = 0; var opened = 1;}
   {
     var state = 0;
     return function(event) {
        if (state == opened) {
  if (event === "close") { 
  state = closed; 
  console.log("Door is closed"); 
} else
  ;
} else 
  if (state == closed) {
  if (event === "open") { 
  state = opened; 
  console.log("Door is opened"); 
} else
  ;
} else 
  ;
     };  
   } 
})();
  
  
doors("open");
doors("close");
doors("open");
doors("close");
